.cpnt-card-view {
  display: flex;
  width: 100%;
  height: 200rpx;
  margin-bottom: 40rpx;
}
.cpnt-card-view .avatar {
  width: 180rpx;
  height: 200rpx;
  margin-right: 40rpx;
  border-radius: 6px;
}
.cpnt-card-view .other {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.cpnt-card-view .other .title-and-tag {
  display: flex;
}
.cpnt-card-view .other .title-and-tag .title {
  margin-right: 32rpx;
}
.cpnt-card-view .other .title-and-tag .tag {
  color: #e22400;
}
.cpnt-card-view .other .intro {
  flex: 1;
  font-size: 12px;
  color: rgba(0,0,0,0.7);
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box; 
  -webkit-box-orient: vertical; 
  -webkit-line-clamp: 3; 
  overflow: hidden; 
}
.cpnt-card-view .other .btns {
  display: flex;
  justify-content: flex-end;
  color: #979797;
}
.cpnt-card-view .other .btns .edit {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 90rpx;
  height: 40rpx;
  margin-right: 32rpx;
  font-size: 12px;
  background-color: #f7f7f7;
}
.cpnt-card-view .other .btns .delete {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 90rpx;
  height: 40rpx;
  font-size: 12px;
  background-color: #f7f7f7;
}