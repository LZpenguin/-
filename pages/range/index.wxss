.page-range {
  display: flex;
  flex-direction: column;
  position: relative;
  width: 100vw;
  height: 100vh;
  overflow: auto;
}
.page-range .red-back {
  position: absolute;
  left: 0;
  top: 0;
  width: 750rpx;
  height: 330rpx;
  z-index: -1;
}
.page-range .list-navi {
  display: flex;
  justify-content: space-around;
  width: 750rpx;
  height: 125rpx;
  padding-top: 32rpx;
  color: #fff;
}
.page-range .list-navi .bottom-hover {
  position: absolute;
  left: calc(94.25rpx - 12.5px);
  top: 45px;
  width: 25px;
  height: 2px;
  transition: all linear .1s;
}
.page-range .lists {
  flex: 1;
  position: relative;
  overflow: hidden;
}
.page-range .lists>view {
  position: absolute;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
  overflow: auto;
  transition: all linear 0.1s;
}