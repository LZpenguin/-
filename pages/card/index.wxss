.page-card {
  display: flex;
  flex-direction: column;
  position: relative;
  width: 100vw;
  height: 100vh;
  overflow: auto;
}
.page-card .red-back {
  position: absolute;
  left: 0;
  top: 0;
  width: 750rpx;
  height: 330rpx;
  z-index: -1;
}
.page-card .card-container {
  position: relative;
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 35px 30px;
  background-color: #f6efdd;
  border-radius: 22px 22px 0 0;
  overflow: hidden;
}
.page-card .card-container .blur-back {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
  filter: blur(10px);
}
.page-card .card-container .btn-groups {
  position: absolute;
  right: 30rpx;
  bottom: 300rpx;
}
.page-card .card-container .btn-groups .btn-group {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 32px;
  height: 150rpx;
  z-index: 2;
}
.page-card .card-container .btn-group .icon {
  width: 32px;
  height: 32px;
  z-index: inherit;
}
.page-card .card-container .author .icon {
  width: 48px;
  height: 48px;
  border: 4px solid #fff;
  border-radius: 50%;
}
.page-card .card-container .btn-group .count {
  z-index: inherit;
}
.page-card .card-container .card {
  flex: 1;
  display: flex;
  flex-direction: column;
  width: 100%;
  min-height: 900rpx;
  margin-bottom: 30px;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 6px;
  z-index: 1;
}
.page-card .card-container .card .village {
  font-size: 17px;
  font-weight: bold;
}
.page-card .card-container .card .info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.page-card .card-container .card .info .pics-container {
  position: relative;
  width: 480rpx;
  height: 640rpx;
  margin-bottom: 64rpx;
  background-color: #f6efdd;
  overflow: hidden;
}
.page-card .card-container .card .info .pics-container .pic {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  transition: all linear 0.2s;
}
.page-card .card-container .card .info .pics-container .dots {
  box-sizing: content-box;
  display: flex;
  justify-content: space-between;
  position: absolute;
  bottom: 8px;
  height: 8px;
  padding: 4px;
  border-radius: 9px;
  background-color: rgba(177, 177, 177, 0.5);
}
.page-card .card-container .card .info .pics-container .dots .dot {
  width: 8px;
  height: 8px;
  background-color: rgba(255,255,255,0.5);
  border-radius: 50%;
}
.page-card .card-container .card .info .pics-container .dots .choosen {
  background-color: rgba(255,255,255,1);
}
.page-card .card-container .card .info .intro {
  width: 420rpx;
  font-size: 12px;
  color: rgba(0,0,0,.7);
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box; 
  -webkit-box-orient: vertical; 
  -webkit-line-clamp: 4; 
  overflow: hidden; 
}
.page-card .card-container .btns {
  display: flex;
  z-index: 2;
} 
.page-card .card-container .btns .last {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 30rpx;
  color: #fff;
  background-color: #000;
  border-radius: 4px;
}
.page-card .card-container .btns .next {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
  margin: 0 36rpx;
  color: #fff;
  background-color: #e22400;
  border-radius: 4px;
}