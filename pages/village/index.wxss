.page-village {
  position: relative;
  width: 100vw;
  height: 100vh;
}
.page-village .pic {
  width: 750rpx;
  height: 400rpx;
  background-color: #f4f4f4;
}
.page-village .settle-out {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 80px;
  height: 30px;
  border-radius: 15px;
  color: #fff;
  background-color: rgba(255,255,255,0.3);
}
.page-village .info {
  display: flex;
  align-items: center;
  height: 80rpx;
  padding: 0 20rpx;
}
.page-village .info .name {
  margin-right: 30rpx;
  font-weight: bold;
  max-width: 120px;
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}
.page-village .info .space {
  flex: 1;
}
.page-village .card-list {
  flex: 1;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  overflow: scroll;
}

.page-village .red-back {
  position: absolute;
  left: 0;
  top: 0;
  width: 750rpx;
  height: 330rpx;
  z-index: -1;
}
.page-village .tip {
  height: 200rpx;
  padding: 24rpx 64rpx;
  color: #fff;
}
.page-village .tip>view {
  font-size: 22px;
}
.page-village .fillin {
  height: calc(100vh - 200rpx);
  padding: 96rpx 64rpx;
  background-color: #fff;
  border-radius: 32px 32px 0 0;
  overflow: auto;
}
.page-village .fillin .group {
  margin-bottom: 24rpx;
}
.page-village .fillin .group .key {
  margin-left: 24rpx;
  margin-bottom: 24rpx;
  font-size-adjust: 17px;
}
.page-village .fillin .group .value {
  height: 80rpx;
  padding: 0 18rpx;
  font-size-adjust: 17px;
  border: 1px solid rgba(151, 151, 151, 0.5);
  border-radius: 6px;
}
.page-village .fillin .group .pickers {
  display: flex;
}
.page-village .fillin .group .picker {
  display: flex;
  align-items: center;
}
.page-village .fillin  .btn {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 340rpx;
  height: 72rpx;
  margin: 60rpx auto;
  color: #fff;
  background-color: #e22401;
  border-radius: 4px;
}